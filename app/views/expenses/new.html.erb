<% content_for :styles do %> 
  .img-details {
    color: darkred;
    padding: 2.5rem;
    background: linear-gradient(90deg, #050000 46%, #240129 100%);
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.img-details img {
    width: 40px;
}

  .details {
    font-size: 1.7rem;
    width: 100%;
    display: flex;
    justify-content: center;
  }

    .input, input {
    padding: 1rem 4rem;
    border: 4px solid darkred;
  }

  .create-expense {
    margin-top: 3rem;
  }

  .form {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 3rem;
  }
<% end %>

<div class='container'>
  <div class = 'img-details'>
    <%= link_to category_path(@category), class: "btn btn-primary" do %>
    <img src="https://cdn-icons-png.flaticon.com/128/11997/11997228.png">
    <% end %>
    <div class='details'>
        <div> New Expense </div>
    </div>
  </div>
  <%= form_with(model: [@category, @expense], class: 'form', local: true) do |form| %>
   
    <div class='field'>
      <%= form.label :category_id, "Selected Category" %>
      <%= form.collection_select :category_id, [@category], :id, :name, { prompt: "Selected category" } %>
    </div>

    <div class='field'>
      <br/>
      <%= form.text_field :name, placeholder: "Name", class: "input" %>
    </div>

    <div class='field'>
      <br/>
      <%= form.number_field :amount, placeholder: "Amount", class: "input" %>
    </div>

    <%= form.submit 'Create Expense', class: 'create-expense input' %>
  <% end %>
</div>
